.live-link-connections-dropdown {
    border-color: #636363;
}

.live-link-connections-dropdown__all-connections-actions-section {
    border-color: #636363;
}

.live-link-connections-dropdown__start-section {
    border-color: #636363;
}

.live-link-connections-dropdown__groups__item__device__hover {
    background-color: #d6d6d6;
}

.live-link-connections-dropdown__label-button:hover {
    background-color: #DFDFDF;
}

.live-link-connections-dropdown__icon-button:hover {
    background-color: #EFEFEF;
}

.live-link-connections-dropdown__groups__item__title ToolbarMenu {
    background-image: resource('_Menu');
}

.live-link-connections-dropdown__status--connected { background-image: url("../Icons/Connected@2x.png"); }
.live-link-connections-dropdown__status--error { background-image: url("../Icons/ConnectionError@2x.png"); }
.live-link-connections-dropdown__status--disabled { background-image: url("../Icons/Disconnected@2x.png"); }
.live-link-connections-dropdown__status--reseting { background-image: url("../Icons/LiveLinkReset@2x.png"); }

.live-link-connections-dropdown__groups__item__device__disable-button {
    background-image: url('../Icons/Disconnected@2x.png');
}

.live-link-connections-dropdown__groups__item__device__reset-button {
    background-image: url('../Icons/LiveLinkReset@2x.png');
}

.live-link-connections-dropdown__groups__item__device__reset-when-disabled-button {
    background-image: url('../Icons/LiveLinkReset@2x.png');
}